#include <iostream>
#include <iomanip>
using namespace std;

const double RES_PROC = 4.5,
             RES_SRVC = 30,
             RES_CHNL = 5,
             BUS_PROC = 16.5,
             BUS_SRVC_UNDER_5 = 80,
             BUS_SRVC_OVER_5 = 4,
             BUS_CHNL = 50;
    
int main()
{
    int choice;
    
    cout << "CABLE BILL CALCULATOR" << endl << endl;
    cout << "Enter customer type (1 for residential, 2 for business): ";
    
    // Repeatedly ask customer type if input is wrong 
    do {
        cin >> choice;
        if (choice != 1 && choice != 2)
            cout << "Invalid choice. Try again: ";
    } while (choice != 1 && choice != 2);
    
    double cableBill;
    
    // It is given that if choice != 1, choice == 2
    if (choice == 1) {
        int channels;
    
        cout << "Enter number of premium channels: ";
        do {
            cin >> channels;
            if (channels <= 0)
                cout << "Input cannot be negative or zero. Try again: ";
        } while (channels <= 0);
        
        cout << endl << "Processing fee: $" << RES_PROC << endl;
        cout << "Basic service fee: $" << RES_SRVC << endl;
        cout << "Premium channels: $" << (RES_CHNL * channels) << endl;
        
        cableBill = RES_PROC + RES_SRVC + (RES_CHNL * channels);
    }
    else {
        int connections, channels;
    
        cout << "Enter number of connections: ";
        do {
            cin >> connections;
            if (connections <= 0)
                cout << "Input cannot be negative or zero. Try again: ";
        } while (connections <= 0);
        cout << "Enter number of premium channels: ";
        do {
            cin >> channels;
            if (channels <= 0)
                cout << "Input cannot be negative or zero. Try again: ";
        } while (channels <= 0);
        
        if (connections <= 5) cableBill = BUS_SRVC_UNDER_5;
        else cableBill = BUS_SRVC_OVER_5 + (BUS_SRVC_UNDER_5 * (connections - 5));
        
        cout << endl << "Processing fee: $" << BUS_PROC << endl;
        cout << "Basic service fee: $" << cableBill << endl;
        cout << "Premium channels: $" << (BUS_CHNL * channels) << endl;
        
        cableBill += 16.5 + (BUS_CHNL * channels);
    }
    
    cout << fixed << setprecision(2);
    cout << endl << "Cable bill amount: $" << cableBill;
        
    return 0;
}
